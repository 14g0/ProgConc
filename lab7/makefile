arg1 := $(word 1, $(MAKECMDGOALS))
arg2 := $(word 2, $(MAKECMDGOALS))
arg3 := $(word 3, $(MAKECMDGOALS))
arg4 := $(word 4, $(MAKECMDGOALS))

.PHONY: main

#-------------------------------------------------------------------------------

main: main.c ../utils.c
	clear
	gcc -o main.o main.c ../utils.c -ansi -pedantic -Wall

#-------------------------------------------------------------------------------

exe:
	./main.o $(arg2)

#-------------------------------------------------------------------------------

%:
	@:

#-------------------------------------------------------------------------------

clear:
	rm -r *.o